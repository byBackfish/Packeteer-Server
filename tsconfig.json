{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"strict": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "dist/",
		"baseUrl": ".",
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}